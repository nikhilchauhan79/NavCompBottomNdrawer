<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:id="@+id/text_view_home"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Home Fragment" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to settings fragment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/to_settings_fragment"
        app:layout_constraintTop_toBottomOf="@id/text_view_home"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to profile fragment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/to_profile_fragment"
        app:layout_constraintTop_toBottomOf="@id/to_settings_fragment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to notification fragment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/to_notification_fragment"
        app:layout_constraintTop_toBottomOf="@id/to_profile_fragment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/to_home_fragment"
        android:text="to home fragment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/to_notification_fragment"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to gallery fragment"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/to_gallery_fragment"
        app:layout_constraintTop_toBottomOf="@id/to_home_fragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>